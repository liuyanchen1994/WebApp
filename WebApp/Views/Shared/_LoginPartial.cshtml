@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li>
            <span class="navbar-text">@UserManager.GetUserName(User)</span>
        </li>
        <li><a class="nav-link" asp-controller="Account" asp-action="Logout">退出</a></li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li>
            <a class="nav-link text-muted" asp-controller="Account" asp-action="Login">登录</a>
            </li>
        <li>
            <a class="nav-link text-muted" asp-controller="Account" asp-action="Register">注册</a>
        </li>
    </ul>
}
