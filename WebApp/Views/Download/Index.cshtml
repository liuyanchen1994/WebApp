
@{
    Layout = "_Layout";
    ViewData["Title"] = "下载-MSDev";
}
@model WebApp.Models.ViewModels.DownloadViewModels

<div class="row">
    <div class="col-md-3">
        @{
            <ul class="list-group">
                @foreach (var catalog in Model.Catalog)
                {
                    <li class="list-group-item">
                        <a class="nav-link" data-toggle="collapse" href="#collapse-@catalog.Value" aria-expanded="true" aria-controls="collapse-@catalog.Value">
                            @catalog.Name
                        </a>
                        <ul class="collapse show nav-pills flex-column " id="collapse-@catalog.Value">
                            @foreach (var childCatalog in catalog.InverseTopCatalog)
                            {
                                <li class="nav-item">
                                    <a asp-route-id="@childCatalog.Id" class="nav-link res-menu">@childCatalog.Name</a>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        }
    </div>

    <div class="col-8">
        <div id="accordion" role="tablist">
            @{
                if (Model.Resource != null)
                {

                    foreach (var resource in Model.Resource)
                    {
                        <div class="card">
                            <div class="card-header" role="tab" id="headingOne">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" href="#@resource.Id" aria-expanded="true" aria-controls="collapseOne">
                                        @resource.Name
                                    </a>
                                </h5>
                            </div>

                            <div id="@resource.Id" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-block">
                                    @resource.Description


                                    @resource.Path
                                </div>
                            </div>
                        </div>

                    }
                }
            }

        </div>
    </div>
</div>



