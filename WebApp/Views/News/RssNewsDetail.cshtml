@model WebApp.DB.RssNews;
@{
    ViewData["Title"] = @Model.Title + "-MSDev";
}
<div class="row">
    <div class="col-md-10">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            以下内容使用Bing neural translator 翻译，如果影响您的阅读，可选择
            <a class="alert-link" href="@Model.Link" target="_blank">查看原文</a>！
        </div>

        <section name="article" class="article-content p-2">
            <h4 class="text-center my-2">
                @Model.TitleCn
            </h4>
            <div>
                <span class="text-info">
                    作者:@Model.Author
                </span>
                <span class="text-muted">
                    @Model.CreateTime
                </span>
            </div>

            <div class="my-2">
                @Html.Raw(Model.Content)
            </div>
        </section>

    </div>

</div>

@section scripts{
    <script>
        $("document").ready(function () {
            $("img").attr("height", "");
            //处理内容中图片的显示宽度
            $("img").attr("max-width", "96%");
            //其他图片宽度单独处理
            $("#qq_group").attr("width", "");
        });
    </script>
}