@model WebApp.DB.Blog
@{
    ViewData["Title"] = @Model.Title + "-MSDev";
}

<div class="col-md-10">

    <section name="article" class="article-content p-2">
        <h4 class="text-center my-2">
            @Model.Title
        </h4>
        <div>
            <span class="text-info">
                作者:@Model.AuthorName
            </span>
            <span class="text-muted">
                @Model.CreatedTime
            </span>
        </div>
        <div class="my-2">
            @Model.Content
        </div>
    </section>
</div>
